<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.MainPage">
    
        <StackLayout BackgroundColor="LightSlateGray">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Hello Player" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome To The Trivia Game" HorizontalTextAlignment="Center" TextColor="White" FontSize="32"/>
        </Frame>

        <Button Text="Log In" Clicked="LogInButton" FontSize="25" TextColor="White" Padding="20" Margin="00, 150, 0, 50"/>
        <Button Text="Sign Up"  Clicked="SignUpButton" FontSize="25" TextColor="White" Padding="20" Margin="00, 50, 0, 50"/>

    </StackLayout>
    
</ContentPage>